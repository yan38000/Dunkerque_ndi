<!DOCTYPE html>
<html lang="fr-FR">
   <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- ================= NAVBAR DÉPENDENCE ================= -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
      <link rel="stylesheet" href="/style.css">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
      <script src="/nav.js"></script>
     
      <!-- ================= FIN NAVBAR DÉPENDENCE ================= -->
      <title></title>
   </head>
   <body id="body-pd">
      <header class="header" id="header">
         <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
         <form action="./recherche/search" method="get">
            <div class="wrap">
               <div class="search">
                  <input type="text" name="searchword" class="searchTerm" placeholder="">
                  <button type="submit" class="searchButton">
                  <i class="bx bx-search"></i>
                  </button>
               </div>
            </div>
         </form>
      </header>
      <!-- ================= NAVBAR ================= -->
      <div class="l-navbar" id="nav-bar">
         <nav class="nav">
            <div>
               <a href="" class="nav_logo"> 
               <i class='bx bx-heart nav_logo-icon'></i> 
               <span class="nav_logo-name">Sauveteur dunkerquois</span> 
               </a>
               <div class="nav_list"> 
                  <a href="" class="nav_link"> 
                  <i class='bx bx-grid-alt nav_icon'></i> 
                  <span class="nav_name">Bateau</span> 
                  </a> 
               </div>
            </div>
         </nav>
      </div>
      <!-- ================= FIN NAVBAR ================= -->
      <!-- ================= CONTENEUR POUR FICHE PATIENT =================-->
      <div class="height-100 bg-light">

         <% let i = 0; let j = 0; let k = 0; let x = "x"; let y = "y"; let z = "z"; index.forEach(function(user){ let a = user.Id_sauveteur; let b = user.Id_Bateau; let c = user.Id_sauve; if(a <= i || b <= j || c <= k){return true;} %>
      <div class="accordion" id="accordionExample">
         <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
               <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= i +x%>" aria-expanded="true" aria-controls="collapseOne">
               <%= user.Nom_Sauveteur%>
             
               </button>
            </h2>

           
            <div id="collapse<%= i+x%>" class="accordion-collapse collapse" aria-labelledby="headingOne">  
               <div class="accordion-body">     
                 
                  <strong>Nom :</strong>
                  <p><%= user.Nom_Sauveteur %></p>
                  <strong>Prénom :</strong>
                  <p><%= user.Prenom_Sauveteur %></p>
                  <strong>Date de naissance :</strong>
                  <p><%= user.Date_Nais_Sauveteur %></p>
                  <strong>Nombre de sauvés</strong>
                  <p><%= user.Nbr_Sauveteur %></p>
                  
                  <div class="float-righ">
                     <a class="btn btn-primary" href="">Modifier</a>
                  </div>
               </div>
            </div>
           
         </div>
      </div>
      <% i++; %>

      <div class="accordion" id="accordionExample">
         <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
               <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= j+y%>" aria-expanded="true" aria-controls="collapseOne">
               <%= user.Nom_Sauve%>
             
               </button>
            </h2>

           
            <div id="collapse<%= j+y%>" class="accordion-collapse collapse" aria-labelledby="headingOne">  
               <div class="accordion-body">     
                 
                  <strong>Nom :</strong>
                  <p><%= user.Nom_Sauve %></p>
                  <strong>Prénom : </strong>
                  <p><%= user.Prenom_Sauve %></p>
                  
                  <div class="float-righ">
                     <a class="btn btn-primary" href="">Modifier</a>
                  </div>
               </div>
            </div>
           
         </div>
      </div>

      <% j++; %>

      
      <div class="accordion" id="accordionExample">
         <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
               <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= k+z%>" aria-expanded="true" aria-controls="collapseOne">
               <%= user.Nom_Bateau%>
             
               </button>
            </h2>

           
            <div id="collapse<%= k+z%>" class="accordion-collapse collapse" aria-labelledby="headingOne">  
               <div class="accordion-body">     
                 
                  <strong>Nom :</strong>
                  <p><%= user.Nom_Bateau %></p>
                  <strong>Description : </strong>
                  <p><%= user.Description_Bateau %></p>
                  
                  <div class="float-righ">
                     <a class="btn btn-primary" href="">Modifier</a>
                  </div>
               </div>
            </div>
           
         </div>
      </div>

      <% k++; }) %>
   </body>
   <!-- ================= FIN DU CONTENEUR =================-->
</html>
